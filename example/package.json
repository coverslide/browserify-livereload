{
  "main": "index.js",
  "scripts": {
    "dev": "npm run watch-js & npm run serve",
    "watch-js": "watchify -p [ browserify-livereload --host localhost --port 1337 ] src/main.js -o src/bundle.js -v",
    "serve": "http-server -o"
  },
  "devDependencies": {
    "watchify": "^3.7.0",
    "browserify-livereload": "^1.0.0"
  }
}
